<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <meta name="cards-baseurl" content="@Url.GetRoot()" />

    <title>@ViewBag.Title - Cards v1.0</title>
    <link rel="icon" href="@Url.Content("~/Content/images/cards.ico")" type="image/x-icon" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/cards.ico")" type="image/x-icon" />
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="banner"><h1>Cards</h1></header>
    <section>
    @RenderBody()
    </section>
    <div style="clear:both" ></div>
    <div id="error-modal">
        <div>
            <span></span>
        </div>
    </div>
    <footer><p>Cards. Contribute at <a href="https://github.com/netxph/cards">https://github.com/netxph/cards</a> .</p></footer>
    <div id="load-modal"></div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
    
</body>
</html>
