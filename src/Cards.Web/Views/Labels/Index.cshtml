@{
    ViewBag.Title = "Labels";
}

@section scripts {
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/labels")
}

<section>
	<header>
		<h1>Labels</h1>
	</header>
	<ul id="labels-big" data-bind="foreach: labels">
		<li>
		<span data-bind="text: Name, attr: { 'data-color': Color }"></span>
		<button>Delete</button>
		</li>
	</ul>

	<form action="POST" data-bind="with: newLabel">
		<span>Name</span>
		<input type="text" data-bind="value: Name"></input>
		<span>Color</span>
		<input type="text" data-bind="value: Color"></input>
		<button data-bind="click: $root.addLabel">Add</button>
	</form> 
</section>
