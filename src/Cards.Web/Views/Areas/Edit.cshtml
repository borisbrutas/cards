@{
    ViewBag.Title = "Edit";
}

@section scripts {
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/editarea")
}

<section class="edit-section" data-areaid="@ViewBag.AreaID" data-bind="with: area" >
    <section class="edit-form">
        <header>
            <h1>
                <input type="text" data-bind="value: Name" />
            </h1>
        </header>
        <div class="action-buttons">
            <button data-bind="click: $root.updateArea">Save</button>
            <button data-bind="click: $root.deleteArea">Delete</button>
        </div>
        <div class="clear" ></div>
    </section>
</section>

